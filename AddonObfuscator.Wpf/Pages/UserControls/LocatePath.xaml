<UserControl x:Class="AddonObfuscator.Wpf.Pages.UserControls.LocatePath"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:AddonObfuscator.Wpf.Pages.UserControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"

             Name="LocatePathControl">

    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Title, ElementName=LocatePathControl}"
                   Style="{StaticResource SmallTitle}" Grid.Column="0" Grid.Row="0"/>

        <TextBox IsReadOnly="True" Text="{Binding Path, ElementName=LocatePathControl}" Grid.Column="0" Grid.Row="1"/>

        <Button Content="..." Click="LocateButtonClick" hc:Poptip.Content="Locate Path"
                hc:Poptip.Placement="Right" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</UserControl>
